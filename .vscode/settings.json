{
    "[python]": {
        "editor.formatOnSaveMode": "file",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "eeyore.yapf"
    },
    "python.defaultInterpreterPath": "${env:HOME}/.conda/envs/labelmaker/bin/python",
    "yapf.args": [
        "--style",
        "{based_on_style: google, indent_width: 2}"
    ],
    "editor.tabSize": 2,
    "python.analysis.extraPaths": [
        "./3rdparty/ov-seg",
        "./3rdparty/InternImage/segmentation",
        "./3rdparty/ov-seg/third_party/CLIP",
        "./3rdparty/omnidata/omnidata_tools/torch",
        "./3rdparty/RGBX_Semantic_Segmentation",
        "./scripts",
        "./3rdparty"
    ],
    "editor.detectIndentation": true,
    "editor.indentSize": 2,
    "workbench.tree.indent": 4,
}
